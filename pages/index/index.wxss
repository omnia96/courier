.container{
  background-color: #f5f5f5;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
}
.header {
	width: 100vw;
	height: 30vw;
	background-color: #00a4f4;
	border-radius: 0vw 0vw 7vw 7vw;
  position:fixed;
  box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
}
.search {
	width: 90vw;
	height: 15vw;
	background-color: #ffffff;
	border-radius: 1vw;
  position: fixed;
  top: 25vw;
  left: 5vw;
  right: 5vw;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
}
.search-box {
	width: 75vw;
	height: 10vw;
  /* background-color: red; */
	/* background-color: #ffffff; */
  display: flex;
  justify-content: start;
  align-items: center;
}
.scanning {
	width: 10vw;
	height: 10vw;
  /* background-color: red; */
	background-color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.placeholder_header{
  height: 42vw;
}
.courier-infor-list {
	width: 90vw;
	height: 30vw;
	background-color: #ffffff;
	border-radius: 1vw;
  margin-bottom: 2vw;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.courier-infor-list-header{
  width: 85vw;
  height: 13vw;
  display: flex;
  justify-content: start;
  align-items: center;
}
.courier-com{
  font-size: 4vw;
  font-weight: bold;
  margin-left: 1vw;
  margin-right: 1vw;
}
.courier-nu{
  font-size: 4vw;
  font-weight: bold;
  margin-left: 1vw;
  margin-right: 1vw;
}
.courier-infor-list-content {
	width: 85vw;
	height: 15vw;
	background-color: #f5f5f5;
	border-radius: 1vw;
  display: flex;
  justify-content: start;
  align-items: center;
}
.courier-lastInfo{
  font-size: 3vw;
  margin-left: 2vw;
  margin-right: 2vw;
}