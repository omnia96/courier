.container{
  background-color: #f5f5f5;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
}
.header {
	width: 100vw;
	height: 30vw;
	background-color: #00a4f4;
	border-radius: 0vw 0vw 7vw 7vw;
  position:fixed;
  box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
}
.search {
	width: 90vw;
	height: 15vw;
	background-color: #ffffff;
	border-radius: 1vw;
  position: fixed;
  top: 25vw;
  left: 5vw;
  right: 5vw;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
}
.search-box {
	width: 75vw;
	height: 10vw;
  /* background-color: red; */
	/* background-color: #ffffff; */
  display: flex;
  justify-content: start;
  align-items: center;
}
.scanning {
	width: 10vw;
	height: 10vw;
  /* background-color: red; */
	background-color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search-button{
  width: 80vw;
  height: 10vw;
  background-color: #00a4f4;
	border-radius: 1vw;
  position: fixed;
  top: 50vw;
  left: 10vw;
  right: 10vw;
  box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}
