.container {
    background-color: #f5f5f5;
    width: 100%;
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: start;
    align-items: center;
}

.header {
    width: 100vw;
    height: 50vw;
    background-color: #00a4f4;
    border-radius: 0vw 0vw 7vw 7vw;
    position: fixed;
    box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
}

.placeholder_header {
    height: 62vw;
}

.content-scroll {
    width: 90vw;
    height: 80vh;
    background-color: white;
    position: fixed;
    top: 30vw;
    border-radius:1vw;
    box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
}